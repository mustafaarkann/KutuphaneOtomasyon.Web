@model KutuphaneOtomasyon.Web.Models.DashboardViewModel // ViewModel'inizi burada belirtiyoruz

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyasını belirtiyoruz
}

<h1 class="text-4xl font-extrabold text-gray-800 mb-8">Hoş Geldiniz, Yönetici!</h1>

<section id="section-dashboard" class="content-section">
    <h2 class="text-2xl font-semibold text-gray-700 mb-6">Genel Bakış</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">

        <div class="bg-blue-100 text-blue-800 p-6 rounded-xl shadow-md flex items-center justify-between">
            <div>
                <p class="text-sm font-medium opacity-80">Toplam Kitaplar</p>
                <p class="text-3xl font-bold mt-1">@Model.ToplamKitapSayisi</p>
            </div>
            <i data-lucide="book-open" class="w-10 h-10 opacity-70"></i>
        </div>

        <div class="bg-green-100 text-green-800 p-6 rounded-xl shadow-md flex items-center justify-between">
            <div>
                <p class="text-sm font-medium opacity-80">Toplam Üyeler</p>
                <p class="text-3xl font-bold mt-1">@Model.ToplamUyeSayisi</p>
            </div>
            <i data-lucide="users" class="w-10 h-10 opacity-70"></i>
        </div>

        <div class="bg-yellow-100 text-yellow-800 p-6 rounded-xl shadow-md flex items-center justify-between">
            <div>
                <p class="text-sm font-medium opacity-80">Aktif Ödünçler</p>
                <p class="text-3xl font-bold mt-1">@Model.AktifOduncSayisi</p>
            </div>
            <i data-lucide="clock" class="w-10 h-10 opacity-70"></i>
        </div>
    </div>

    <h2 class="text-2xl font-semibold text-gray-700 mb-6">Hızlı Eylemler</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">

        <a asp-controller="Kitaplar" asp-action="Create" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg transition-all duration-300 transform hover:scale-105 flex items-center justify-center space-x-3">
            <i data-lucide="plus-circle" class="w-6 h-6"></i>
            <span>Yeni Kitap Ekle</span>
        </a>

        <a asp-controller="Uyeler" asp-action="Create" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg transition-all duration-300 transform hover:scale-105 flex items-center justify-center space-x-3">
            <i data-lucide="user-plus" class="w-6 h-6"></i>
            <span>Yeni Üye Ekle</span>
        </a>

        <a asp-controller="OduncAlmalar" asp-action="Create" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg transition-all duration-300 transform hover:scale-105 flex items-center justify-center space-x-3">
            <i data-lucide="library" class="w-6 h-6"></i>
            <span>Yeni Ödünç Oluştur</span>
        </a>
    </div>

    <h2 class="text-2xl font-semibold text-gray-700 mb-6">Son Etkinlikler</h2>
    <div class="bg-gray-50 p-6 rounded-xl shadow-md">
        <ul class="space-y-3">
            @if (Model.SonEtkinlikler != null && Model.SonEtkinlikler.Any())
            {
                @foreach (var activity in Model.SonEtkinlikler)
                {
                    <li class="text-gray-700">@activity</li>
                }
            }
            else
            {
                <li class="text-gray-500 text-sm">Henüz bir etkinlik bulunmamaktadır.</li>
            }
        </ul>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

    </script>
}