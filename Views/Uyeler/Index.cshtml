@model IEnumerable<KutuphaneOtomasyon.Web.Models.Uye>

@{
    ViewData["Title"] = "Üyeler";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-6">Üyeler</h1>

    <div class="mb-6">
        <a asp-action="Create" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <svg class="-ml-1 mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Yeni Üye Ekle
        </a>
    </div>

    @* Başarı mesajını göstermek için *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Başarılı!</strong>
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <button type="button" class="close text-green-700 hover:text-green-900" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </span>
        </div>
    }

    <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        @Html.DisplayNameFor(model => model.Ad)
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        @Html.DisplayNameFor(model => model.Soyad)
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        @Html.DisplayNameFor(model => model.Eposta)
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        @Html.DisplayNameFor(model => model.Telefon)
                    </th>
                    <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Eylemler</span>
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            @Html.DisplayFor(modelItem => item.Ad)
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @Html.DisplayFor(modelItem => item.Soyad)
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @Html.DisplayFor(modelItem => item.Eposta)
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @Html.DisplayFor(modelItem => item.Telefon)
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a asp-action="Edit" asp-route-id="@item.UyeID" class="text-indigo-600 hover:text-indigo-900 mr-4">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@item.UyeID" class="text-blue-600 hover:text-blue-900 mr-4">Detaylar</a>
                            <a asp-action="Delete" asp-route-id="@item.UyeID" class="text-red-600 hover:text-red-900">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>