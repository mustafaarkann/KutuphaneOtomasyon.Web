@model KutuphaneOtomasyon.Web.Models.Uye

@{
    ViewData["Title"] = "Üye Düzenle";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Üye Düzenle</h1>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            <input type="hidden" asp-for="UyeID" /> @* ID'yi gizli alan olarak gönderiyoruz *@

            <div class="mb-4">
                <label asp-for="Ad" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Ad" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Ad" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Soyad" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Soyad" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Soyad" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Eposta" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Eposta" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Eposta" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Telefon" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Telefon" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Telefon" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex items-center justify-between mt-6">
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                    Kaydet
                </button>
                <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800">
                    Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}