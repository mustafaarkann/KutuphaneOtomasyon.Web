@model IEnumerable<KutuphaneOtomasyon.Web.Models.Personel>

@{
    ViewData["Title"] = "Personeller";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Personeller</h1>
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            Yeni Personel Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="bg-gray-100 border-b border-gray-200 text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <th class="px-5 py-3 text-left">
                            @Html.DisplayNameFor(model => model.Ad)
                        </th>
                        <th class="px-5 py-3 text-left">
                            @Html.DisplayNameFor(model => model.Soyad)
                        </th>
                        <th class="px-5 py-3 text-left">
                            @Html.DisplayNameFor(model => model.KullaniciAdi)
                        </th>
                        <th class="px-5 py-3 text-left">
                            @Html.DisplayNameFor(model => model.Rol)
                        </th>
                        <th class="px-5 py-3 text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="px-5 py-5 text-sm text-gray-900 whitespace-no-wrap">
                                @Html.DisplayFor(modelItem => item.Ad)
                            </td>
                            <td class="px-5 py-5 text-sm text-gray-900 whitespace-no-wrap">
                                @Html.DisplayFor(modelItem => item.Soyad)
                            </td>
                            <td class="px-5 py-5 text-sm text-gray-900 whitespace-no-wrap">
                                @Html.DisplayFor(modelItem => item.KullaniciAdi)
                            </td>
                            <td class="px-5 py-5 text-sm text-gray-900 whitespace-no-wrap">
                                @Html.DisplayFor(modelItem => item.Rol)
                            </td>
                            <td class="px-5 py-5 text-sm text-gray-900 whitespace-no-wrap text-right">
                                <a asp-action="Edit" asp-route-id="@item.PersonelID" class="text-blue-600 hover:text-blue-900 mr-3">Düzenle</a>
                                <a asp-action="Details" asp-route-id="@item.PersonelID" class="text-green-600 hover:text-green-900 mr-3">Detaylar</a>
                                <a asp-action="Delete" asp-route-id="@item.PersonelID" class="text-red-600 hover:text-red-900">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>