@model KutuphaneOtomasyon.Web.Models.Personel

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Yeni Personel Ekle</h1>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <h4 class="text-xl font-semibold text-gray-700 mb-4">Personel Bilgileri</h4>
        <hr class="mb-4" />
        <div class="max-w-md mx-auto"> @* Formu ortalamak ve genişliğini sınırlamak için *@
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

                <div class="mb-4">
                    <label asp-for="Ad" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Ad" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Ad" class="text-red-500 text-xs italic mt-1 block"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Soyad" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Soyad" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Soyad" class="text-red-500 text-xs italic mt-1 block"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="KullaniciAdi" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="KullaniciAdi" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="KullaniciAdi" class="text-red-500 text-xs italic mt-1 block"></span>
                </div>
                @* Şifre alanı için geçici olarak input ekliyoruz.
                   Identity entegrasyonu sonrası bu kısım değişecek. *@
                <div class="mb-4">
                    <label for="Sifre" class="block text-gray-700 text-sm font-bold mb-2">Şifre</label>
                    <input type="password" id="Sifre" name="Sifre" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" />
                    @* SifreHash doğrudan formdan gelmiyor, controller'da işlenecek *@
                </div>
                @* Rol seçimi için şimdilik gizli input olarak bırakabiliriz, çünkü controller'da sabit atama yapılıyor *@
                <div class="mb-4">
                    <label asp-for="Rol" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Rol" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="Standart" readonly/> @* Şimdilik varsayılan Rol atanabilir *@
                    <span asp-validation-for="Rol" class="text-red-500 text-xs italic mt-1 block"></span>
                </div>
                <div class="flex items-center justify-between mt-6">
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                        Ekle
                    </button>
                    <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800">
                        Listeye Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}