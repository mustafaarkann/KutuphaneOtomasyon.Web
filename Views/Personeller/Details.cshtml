@model KutuphaneOtomasyon.Web.Models.Personel

@{
    ViewData["Title"] = "Personel Detayları";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Personel Detayları</h1>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <h4 class="text-xl font-semibold text-gray-700 mb-4">Personel</h4>
        <hr class="mb-4" />
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
            <dt class="text-gray-600 font-medium">
                @Html.DisplayNameFor(model => model.Ad)
            </dt>
            <dd class="text-gray-900">
                @Html.DisplayFor(model => model.Ad)
            </dd>
            <dt class="text-gray-600 font-medium">
                @Html.DisplayNameFor(model => model.Soyad)
            </dt>
            <dd class="text-gray-900">
                @Html.DisplayFor(model => model.Soyad)
            </dd>
            <dt class="text-gray-600 font-medium">
                @Html.DisplayNameFor(model => model.KullaniciAdi)
            </dt>
            <dd class="text-gray-900">
                @Html.DisplayFor(model => model.KullaniciAdi)
            </dd>
            <dt class="text-gray-600 font-medium">
                @Html.DisplayNameFor(model => model.Rol)
            </dt>
            <dd class="text-gray-900">
                @Html.DisplayFor(model => model.Rol)
            </dd>
        </dl>
    </div>

    <div class="mt-6 flex gap-4">
        <a asp-action="Edit" asp-route-id="@Model.PersonelID" class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white font-semibold rounded-md shadow-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2">
            Düzenle
        </a>
        <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800 px-4 py-2 border border-gray-300 rounded-md">
            Listeye Geri Dön
        </a>
    </div>
</div>