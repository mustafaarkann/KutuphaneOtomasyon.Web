@model KutuphaneOtomasyon.Web.Models.Kategori

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Kategori Sil</h1>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Bu kategoriyi silmek istediğinizden emin misiniz?</h2>

        <div class="grid grid-cols-1 gap-4 text-gray-700 border-b pb-4 mb-4">
            <div>
                <label class="block text-sm font-bold text-gray-600">Kategori Adı:</label>
                <p class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Ad)</p>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="KategoriID" />
            <div class="flex space-x-4 mt-6">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                    Sil
                </button>
                <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800 py-2 px-4">
                    Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>