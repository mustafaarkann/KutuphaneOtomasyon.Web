@model IEnumerable<KutuphaneOtomasyon.Web.Models.Kitap>

@{
    ViewData["Title"] = "Kitaplar";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Kitaplar</h1>
        <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
            Yeni Kitap Ekle
        </a>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Başlık
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Yazar
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Kategori
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Yayınevi
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Yayın Yılı
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            ISBN
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Mevcut Adet
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <p class="text-gray-900 whitespace-no-wrap">@Html.DisplayFor(modelItem => item.Baslik)</p>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <p class="text-gray-900 whitespace-no-wrap">
                                    @Html.DisplayFor(modelItem => item.Yazar.Ad) @Html.DisplayFor(modelItem => item.Yazar.Soyad)
                                </p>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <p class="text-gray-900 whitespace-no-wrap">
                                    @Html.DisplayFor(modelItem => item.Kategori.Ad)
                                </p>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <p class="text-gray-900 whitespace-no-wrap">
                                    @Html.DisplayFor(modelItem => item.Yayinevi.Ad)
                                </p>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <p class="text-gray-900 whitespace-no-wrap">
                                    @Html.DisplayFor(modelItem => item.YayinYili)
                                </p>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <p class="text-gray-900 whitespace-no-wrap">
                                    @Html.DisplayFor(modelItem => item.ISBN)
                                </p>
                            </td>
                            <td class="px-5 py-5 border-b border-200 bg-white text-sm">
                                <p class="text-gray-900 whitespace-no-wrap">
                                    @Html.DisplayFor(modelItem => item.MevcutAdet)
                                </p>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <div class="flex space-x-2">
                                    <a asp-action="Edit" asp-route-id="@item.KitapID" class="text-indigo-600 hover:text-indigo-900 font-semibold">Düzenle</a>
                                    <a asp-action="Details" asp-route-id="@item.KitapID" class="text-green-600 hover:text-green-900 font-semibold">Detaylar</a>
                                    <a asp-action="Delete" asp-route-id="@item.KitapID" class="text-red-600 hover:text-red-900 font-semibold">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="px-5 py-5 bg-white text-center text-gray-500">
                Henüz hiçbir kitap bulunmamaktadır. Yeni bir kitap ekleyerek başlayabilirsiniz.
            </div>
        }
    </div>
</div>