@model KutuphaneOtomasyon.Web.Models.Kitap

@{
    ViewData["Title"] = "Kitap Sil";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Kitap Sil</h1>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Bu kitabı silmek istediğinizden emin misiniz?</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700 border-b pb-4 mb-4">
            <div class="col-span-2">
                <label class="block text-sm font-bold text-gray-600">Başlık:</label>
                <p class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Baslik)</p>
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-600">Yazar:</label>
                <p class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Yazar.TamAd)</p>
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-600">Kategori:</label>
                <p class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Kategori.Ad)</p>
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-600">Yayınevi:</label>
                <p class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Yayinevi.Ad)</p>
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-600">Yayın Yılı:</label>
                <p class="mt-1 text-gray-900">@(Model.YayinYili.HasValue? Model.YayinYili.ToString() : "-")</p>
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-600">ISBN:</label>
                <p class="mt-1 text-gray-900">@Html.DisplayFor(model => model.ISBN)</p>
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-600">Mevcut Adet:</label>
                <p class="mt-1 text-gray-900">@(Model.MevcutAdet.HasValue? Model.MevcutAdet.ToString() : "-")</p>
            </div>
        </div>

        <form asp-action="Delete">
            @* Buradaki Action "Delete" Controller'daki DeleteConfirmed'i tetikleyecek (ActionName attribute sayesinde) *@
            <input type="hidden" asp-for="KitapID" /> @* Silinecek kitabın ID'sini gizli alan olarak gönderiyoruz *@
            <div class="flex space-x-4 mt-6">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out">
                    Sil
                </button>
                <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800 py-2 px-4">
                    Listeye Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>