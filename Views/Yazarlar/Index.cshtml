@model IEnumerable<KutuphaneOtomasyon.Web.Models.Yazar>

@{
    ViewData["Title"] = "Yazarlar Yönetimi"; // Sayfa başlığını güncelledik
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyasını belirtiyoruz
}

<h1 class="text-4xl font-extrabold text-gray-800 mb-6">Yazarlar Yönetimi</h1>

<div class="mb-6">
    <a asp-action="Create" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
        <i data-lucide="plus" class="w-5 h-5 mr-2"></i> Yeni Yazar Ekle
    </a>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.Ad)
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.Soyad)
                </th>
                <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Eylemler</span>
                </th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">@Html.DisplayFor(modelItem => item.Ad)</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">@Html.DisplayFor(modelItem => item.Soyad)</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a asp-action="Edit" asp-route-id="@item.YazarID" class="text-indigo-600 hover:text-indigo-900 mr-4">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.YazarID" class="text-blue-600 hover:text-blue-900 mr-4">Detaylar</a>
                        <a asp-action="Delete" asp-route-id="@item.YazarID" class="text-red-600 hover:text-red-900">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Lucide ikonlarının bu sayfada da render edilmesi için
