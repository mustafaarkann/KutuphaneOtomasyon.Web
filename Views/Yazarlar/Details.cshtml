@model KutuphaneOtomasyon.Web.Models.Yazar

@{
    ViewData["Title"] = "Yazar Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyasını belirtiyoruz
}

<h1 class="text-4xl font-extrabold text-gray-800 mb-6">Yazar Detayları</h1>

<div class="bg-white shadow-md rounded-lg p-6 max-w-lg mx-auto">
    <h4 class="text-xl font-semibold text-gray-700 mb-4">Yazar Bilgileri</h4>
    <hr class="my-4 border-gray-200" />
    <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        @* Bootstrap'teki dl.row'a karşılık grid sistemi kullandık *@
        <dt class="col-span-1 text-sm font-medium text-gray-500">
            @Html.DisplayNameFor(model => model.Ad)
        </dt>
        <dd class="col-span-2 mt-1 text-sm text-gray-900">
            @* dd.col-sm-10'a karşılık col-span-2 *@
            @Html.DisplayFor(model => model.Ad)
        </dd>

        <dt class="col-span-1 text-sm font-medium text-gray-500">
            @Html.DisplayNameFor(model => model.Soyad)
        </dt>
        <dd class="col-span-2 mt-1 text-sm text-gray-900">
            @Html.DisplayFor(model => model.Soyad)
        </dd>
    </dl>

    <div class="mt-8 flex items-center justify-between">
        @* Butonları hizalamak için flex kullandık *@
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.YazarID" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                Düzenle
            </a>
        </div>
        <div>
            <a asp-action="Index" class="text-indigo-600 hover:text-indigo-900 font-medium">Listeye Geri Dön</a>
        </div>
    </div>
</div>