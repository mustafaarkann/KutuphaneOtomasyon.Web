@model KutuphaneOtomasyon.Web.Models.Yazar

@{
    ViewData["Title"] = "Yazar Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyasını belirtiyoruz
}

<h1 class="text-4xl font-extrabold text-gray-800 mb-6">Yazar Düzenle</h1>

<div class="bg-white shadow-md rounded-lg p-6 max-w-lg mx-auto">
    @* Formu ortalamak için max-w-lg mx-auto ekledik *@
    <h4 class="text-xl font-semibold text-gray-700 mb-4">Yazar Bilgileri</h4>
    <hr class="my-4 border-gray-200" />
    <div class="flex justify-center">
        @* Formu ortaya almak için flex justify-center kullandık *@
        <form asp-action="Edit" class="w-full">
            @* formun genişliğini w-full yaptık *@
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
            <input type="hidden" asp-for="YazarID" /> @* YazarID'yi gizli alan olarak gönderiyoruz *@

            <div class="mb-4">
                <label asp-for="Ad" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Ad" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="Ad" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Soyad" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Soyad" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <span asp-validation-for="Soyad" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex items-center justify-between mt-6">
                <button type="submit" class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Kaydet
                </button>
                <a asp-action="Index" class="text-indigo-600 hover:text-indigo-900 font-medium">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}